{% extends "PanelBundle::layout.html.twig" %}
{% block content %}

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Ankiety </h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2></h2>
                        <div class="input-group">
                            <button type="button" class="btn btn-success" data-toggle="modal"
                                    data-target=".bs-example-modal-lg">Dodaj ankietę
                            </button>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table class="table table-striped table-bordered dt-responsive" id="datatable-responsive">
                            <thead>
                            <tr>
                                <th>Lp.</th>
                                <th>Pytanie</th>
                                <th>Dlo kogo (Status)</th>
                                <th>Sekcja</th>
                                <th>Czy pokazywana</th>
                                <th>Akcje</th>
                            </tr>
                            </thead>


                            <tbody>
                            {% for dane in entities %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ dane.pytanie }}</td>
                                    <td>{{ statusik.ktoraSekcja(dane.status) }}</td>
                                    <td>{{ sekcja.ktoraSekcja(dane.sekcja) }}</td>
                                    <td>{{ dane.czyPokazywac?'TAK':'NIE' }}</td>

                                    <td>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                                   aria-expanded="false"><i style="color: #23527c"
                                                                            class="fa fa-wrench"></i></a>
                                                <ul class="dropdown-menu" role="menu">

                                                    <li>
                                                        <a href="{{ path('ankietaEdit', { 'idAnkieta': dane.id |urlencrypt}) }}">Edytuj</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('ankietyWyniki', { 'idAnkieta': dane.id |urlencrypt} ) }}">Odpowiedzi</a>
                                                    </li>

                                                    {% if dane.czyPokazywac %}
                                                        <li>
                                                            <a href="{{ path('ankietyEnd', { 'idAnkieta': dane.id |urlencrypt }) }}">Zakończ
                                                                wyświetlanie</a>
                                                        </li>
                                                    {% endif %}


                                                </ul>
                                            </li>

                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <form data-parsley-validate class="form-horizontal form-label-left" action="#"
                                      method="post">
                                    {{ form_row(form._token) }}
                                    <div class="error">
                                        {{ form_errors(form) }}
                                    </div>
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                        <h4 class="modal-title" id="myModalLabel2">Dodaj ankietę</h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="form-group">

                                            <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                                   for="first-name">{{ form_label(form.pytanie) }} <span
                                                        class="required">*</span>
                                            </label>
                                            {{ form_errors(form.pytanie) }}
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                {{ form_widget(form.pytanie) }}
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                                   for="first-name">{{ form_label(form.odp1) }} <span
                                                        class="required">*</span>
                                            </label>
                                            {{ form_errors(form.odp1) }}
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                {{ form_widget(form.odp1) }}
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                                   for="first-name">{{ form_label(form.odp2) }} <span
                                                        class="required">*</span>
                                            </label>
                                            {{ form_errors(form.odp2) }}
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                {{ form_widget(form.odp2) }}
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                                   for="first-name">{{ form_label(form.odp3) }}
                                            </label>
                                            {{ form_errors(form.odp3) }}
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                {{ form_widget(form.odp3) }}
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                                   for="first-name">{{ form_label(form.odp4) }}
                                            </label>
                                            {{ form_errors(form.odp4) }}
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                {{ form_widget(form.odp4) }}
                                            </div>
                                        </div>
                                        <div class="form-group">

                                            <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                                   for="first-name">{{ form_label(form.odp5) }}
                                            </label>
                                            {{ form_errors(form.odp5) }}
                                            <div class="col-md-6 col-sm-6 col-xs-12">
                                                {{ form_widget(form.odp5) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.czyPokazywac) }}
                                                <span class="required">*</span>
                                                {{ form_errors(form.czyPokazywac) }}
                                            </label>

                                            <div class=" col-md-6 col-sm-6 col-xs-12 ">

                                                {{ form_widget(form.czyPokazywac[0], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.czyPokazywac[0]) }}
                                                {{ form_widget(form.czyPokazywac[1], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.czyPokazywac[1]) }}

                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.typ) }}
                                                <span class="required">*</span>
                                                {{ form_errors(form.typ) }}
                                            </label>

                                            <div class=" col-md-6 col-sm-6 col-xs-12 ">

                                                {{ form_widget(form.typ[0], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.typ[0]) }}
                                                {{ form_widget(form.typ[1], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.typ[1]) }}

                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.dlaKogoStatus) }}
                                                <span class="required">*</span>
                                                {{ form_errors(form.dlaKogoStatus) }}
                                            </label>

                                            <div class=" col-md-6 col-sm-6 col-xs-12 ">

                                                {{ form_widget(form.dlaKogoStatus[0], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.dlaKogoStatus[0]) }}
                                                {{ form_widget(form.dlaKogoStatus[1], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.dlaKogoStatus[1]) }}
                                                {{ form_widget(form.dlaKogoStatus[2], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.dlaKogoStatus[2]) }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.dlaKogoSekcja) }}
                                                <span class="required">*</span>
                                                {{ form_errors(form.dlaKogoSekcja) }}
                                            </label>

                                            <div class=" col-md-6 col-sm-6 col-xs-12 ">

                                                {{ form_widget(form.dlaKogoSekcja[0], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.dlaKogoSekcja[0]) }}
                                                {{ form_widget(form.dlaKogoSekcja[1], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.dlaKogoSekcja[1]) }}
                                                {{ form_widget(form.dlaKogoSekcja[2], {'attr': {'class':'flat'} }) }}
                                                {{ form_label(form.dlaKogoSekcja[2]) }}
                                            </div>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Zamknij
                                        </button>
                                        {{ form_widget(form.save) }}
                                    </div>
                                    <div style="display:none;">
                                        {{ form_rest(form) }}
                                    </div>
                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}