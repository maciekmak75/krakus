                                    {{ form_widget(form.dlaKogoSekcja[0], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.dlaKogoSekcja[0]) }}
                                    {{ form_widget(form.dlaKogoSekcja[1], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.dlaKogoSekcja[1]) }}
                                    {{ form_widget(form.dlaKogoSekcja[2], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.dlaKogoSekcja[2]) }}
                                </div>
                            </div>
                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="reset" class="btn btn-primary">Wyczyść</button>
                                    {{ form_widget(form.save) }}
                                </div>
                                <div style="display:none;">
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}