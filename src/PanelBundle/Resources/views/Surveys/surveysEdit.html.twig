{% extends "PanelBundle::layout.html.twig" %}
{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>{{ title }} ankiety</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <br/>
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="#"
                              method="post">
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                       for="first-name">{{ form_label(form.pytanie) }} <span class="required">*</span>
                                </label>
                                {{ form_errors(form.pytanie) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.pytanie) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                       for="first-name">{{ form_label(form.odp1) }} <span class="required">*</span>
                                </label>
                                {{ form_errors(form.odp1) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.odp1) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                       for="first-name">{{ form_label(form.odp2) }} <span class="required">*</span>
                                </label>
                                {{ form_errors(form.odp2) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.odp2) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                       for="first-name">{{ form_label(form.odp3) }}
                                </label>
                                {{ form_errors(form.odp3) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.odp3) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                       for="first-name">{{ form_label(form.odp4) }}
                                </label>
                                {{ form_errors(form.odp4) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.odp4) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                       for="first-name">{{ form_label(form.odp5) }}
                                </label>
                                {{ form_errors(form.odp5) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.odp5) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.czyPokazywac) }}
                                    <span class="required">*</span>
                                    {{ form_errors(form.czyPokazywac) }}
                                </label>
                                <div class=" col-md-6 col-sm-6 col-xs-12 ">
                                    {{ form_widget(form.czyPokazywac[0], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.czyPokazywac[0]) }}
                                    {{ form_widget(form.czyPokazywac[1], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.czyPokazywac[1]) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.typ) }}
                                    <span class="required">*</span>
                                    {{ form_errors(form.typ) }}
                                </label>
                                <div class=" col-md-6 col-sm-6 col-xs-12 ">
                                    {{ form_widget(form.typ[0], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.typ[0]) }}
                                    {{ form_widget(form.typ[1], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.typ[1]) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.dlaKogoStatus) }}
                                    <span class="required">*</span>
                                    {{ form_errors(form.dlaKogoStatus) }}
                                </label>
                                <div class=" col-md-6 col-sm-6 col-xs-12 ">

                                    {{ form_widget(form.dlaKogoStatus[0], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.dlaKogoStatus[0]) }}
                                    {{ form_widget(form.dlaKogoStatus[1], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.dlaKogoStatus[1]) }}
                                    {{ form_widget(form.dlaKogoStatus[2], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.dlaKogoStatus[2]) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.dlaKogoSekcja) }}
