{% extends "PanelBundle::layout.html.twig" %}
{% block content %}

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Wyniki ankiety:<br> {{ survey.pytanie }}</h3>
            </div>
        </div>

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_content">


                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                            {% for data in answers %}
                                <li role="presentation" class="{% if loop.index ==1 %}active{% endif %}"><a
                                            href="#tab_content{{ loop.index }}" id="" role="tab"
                                            data-toggle="tab"
                                            aria-expanded="true">{{ data.nazwa }} ({{ entities[loop.index -1]|length }}
                                        os)</a>
                                </li>

                            {% endfor %}
                        </ul>

                        <div id="myTabContent" class="tab-content">
                            {% for data in entities %}
                                <div role="tabpanel" class="tab-pane fade {% if loop.index ==1 %}active in {% endif %}"
                                     id="tab_content{{ loop.index }}"
                                     aria-labelledby="{% if loop.index ==1 %}home{% else %}profile{% endif %}-tab">
                                    <table class="table table-striped table-bordered dt-responsive display"
                                           cellspacing="0"
                                           width="100%">
                                        <thead>
                                        <tr>
                                            <td>Imię i nazwisko</td>
                                            <td>Płeć</td>
                                            <td>Sekcja</td>
                                            <td>Status</td>
                                            <td>Głos</td>
                                            <td>Nr telefonu</td>

                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for dane in data %}

                                            <tr>
                                                <td>{{ dane.idUzytkownik.__toString() }}</td>
                                                <td>{{ plec.plecNazwa(dane.idUzytkownik.plec)|raw }}</td>
                                                <td>{{ sekcja.sekcjaNazwa(dane.idUzytkownik.sekcja) }}</td>
                                                <td>{{ statusik.statusNazwa(dane.idUzytkownik.status) }}</td>
                                                <td>{{ glos.glosNazwa(dane.idUzytkownik.glos) }}</td>
                                                <td>{{ dane.idUzytkownik.telefon }}
                                                </td>
                                            </tr>

                                        {% endfor %}

                                        </tbody>
                                    </table>
                                </div>
                            {% endfor %}

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

