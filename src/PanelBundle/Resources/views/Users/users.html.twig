{% extends "PanelBundle::layout.html.twig" %}
{% block content %}

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Członkowie </h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <table id="datatable-buttons" class="table table-striped table-bordered">
                            <thead>
                            <tr>
                                <th>Nazwisko</th>
                                <th>Płeć</th>
                                <th>Sekcja</th>
                                <th>Data/miejsce urodzenia</th>
                                <th>Imiona rodziców</th>
                                <th>Numer dowodu</th>
                                <th>PESEL</th>
                                <th>Numer paszportu</th>
                                <th>Data ważności paszportu</th>
                                <th>Uczelnia</th>
                                <th>Numer legitymacji</th>
                                <th>Adres</th>
                                <th>Telefon</th>
                                <th>Mail</th>
                                <th>Głos</th>
                                <th>Wzrost</th>
                                <th>Akcje</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for dane in entities %}
                                <tr>
                                    <td>{{ dane.nazwisko }} {{ dane.imie }}</td>
                                    <td>{{ plec.plecNazwa(dane.plec)|raw }}</td>
                                    <td>{{ sekcja.sekcjaNazwa(dane.sekcja) }}</td>
                                    <td>{{ dane.dataUrodzenia|date('d-m-Y') }}, {{ dane.miejsceUrodzenia }}</td>
                                    <td>{{ dane.imieMatki }}, {{ dane.imieOjca }}</td>
                                    <td>{{ dane.nrDowodu }}</td>
                                    <td>{{ dane.pesel }}</td>
                                    <td>{{ dane.nrPaszportu }}</td>
                                    <td>{{ dane.dataPaszport|date('d-m-Y') }}</td>
                                    <td>{{ dane.uczelnia }}</td>
                                    <td>{{ dane.nrLegitymacji }}</td>
                                    <td>{{ dane.adres }}</td>
                                    <td>{{ dane.telefon }}</td>
                                    <td>{{ dane.mail }}</td>
                                    <td>{{ glos.glosNazwa(dane.glos) }}</td>
                                    <td>{{ dane.wzrost }}</td>
                                    <td>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                                   aria-expanded="false"><i style="color: #23527c"
                                                                            class="fa fa-wrench"></i></a>
                                                <ul class="dropdown-menu" role="menu">
                                                    <li>
                                                        <a href="{{ path('userEdit', { 'idOsoba': dane.id |urlencrypt}) }}">Edytuj</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('profile', { 'idUser': dane.id |urlencrypt} ) }}">Pokaż</a>
                                                    </li>
                                                    <li>
                                                        <a href="{{ path('resetHasla', { 'id': dane.id |urlencrypt} ) }}">Zresetuj
                                                            hasło</a>
                                                    </li>
                                                </ul>
                                            </li>

                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}