{% extends "PanelBundle::layout.html.twig" %}
{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Zgłaszanie problemów</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        {% if not success %}
                            <br/>
                            <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left"
                                  action=""
                                  method="post">


                                <div class="form-group">
                                    <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                           for="last-name">{{ form_label(form.tresc) }}
                                        <span class="required">*</span>
                                    </label>
                                    {{ form_errors(form.tresc) }}
                                    <div class="col-md-6 col-sm-6 col-xs-12">
                                        {{ form_widget(form.tresc) }}
                                    </div>
                                </div>


                                <div class="ln_solid"></div>
                                <div class="form-group">
                                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                        <button type="reset" class="btn btn-primary">Wyczyść</button>
                                        {{ form_widget(form.save) }}
                                    </div>
                                    <div style="display:none;">
                                        {{ form_rest(form) }}
                                    </div>
                                </div>
                            </form>
                        {% else %}
                            <p>
                                Twoje zgłoszenie zostało wysłane do naszego Administratora. Postaramy się jak najszybciej rozwiązać problem
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}