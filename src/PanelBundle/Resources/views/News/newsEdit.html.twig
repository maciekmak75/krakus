{% extends "PanelBundle::layout.html.twig" %}
{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>{{ title }} wiadomości</h3>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_content">
                        <br/>
                        <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left" action="#"
                              method="post">

                            <div class="form-group">

                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                       for="first-name">{{ form_label(form.tytul) }} <span class="required">*</span>
                                </label>
                                {{ form_errors(form.tytul) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.tytul, {'attr': {'required':'true'}}) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12"
                                       for="last-name">{{ form_label(form.tresc) }}
                                    <span class="required">*</span>
                                </label>
                                {{ form_errors(form.tresc) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.tresc) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-3">{{ form_label(form.dataOd) }}
                                    <span class="required">*</span>
                                </label>
                                {{ form_errors(form.dataOd) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.dataOd) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-3">{{ form_label(form.dataDo) }}
                                    <span class="required">*</span>
                                </label>
                                {{ form_errors(form.dataDo) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {{ form_widget(form.dataDo) }}
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">{{ form_label(form.status) }}
                                    <span class="required">*</span>
                                    {{ form_errors(form.status) }}
                                </label>

                                <div class=" col-md-6 col-sm-6 col-xs-12 ">

                                    {{ form_widget(form.status[0], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.status[0]) }}
                                    {{ form_widget(form.status[1], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.status[1]) }}
                                    {{ form_widget(form.status[2], {'attr': {'class':'flat'} }) }}
                                    {{ form_label(form.status[2]) }}


                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3 col-sm-3 col-xs-12">{{  form_label(form.osoby) }}</label>
                                {{ form_errors(form.osoby) }}
                                <div class="col-md-6 col-sm-6 col-xs-12">
                                    {#<select class="select2_multiple form-control" multiple="multiple">
                                        <option>Choose option</option>
                                        <option>Option one</option>
                                        <option>Option two</option>
                                        <option>Option three</option>
                                        <option>Option four</option>
                                        <option>Option five</option>
                                        <option>Option six</option>
                                    </select>#}
                                    {{ form_widget(form.osoby) }}
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                                    <button type="reset" class="btn btn-primary">Wyczyść</button>
                                    {{ form_widget(form.save) }}
                                </div>
                                <div style="display:none;">
                                    {{ form_rest(form) }}
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}