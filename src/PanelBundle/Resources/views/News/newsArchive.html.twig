{% extends "PanelBundle::layout.html.twig" %}
{% block content %}

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Wiadomości </h3>
            </div>
        </div>

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table class="table table-striped table-bordered dt-responsive" id="datatable-responsive">
                            <thead>
                            <tr>
                                <th>Lp.</th>
                                <th>Tytuł</th>
                                <th>Treść</th>
                                <th>Status</th>
                                <th>Od kiedy</th>
                                <th>Do kiedy</th>
                                <th>Akcje</th>
                            </tr>
                            </thead>


                            <tbody>
                            {% for dane in entities %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ dane.tytul }}</td>
                                    <td>{{ dane.tresc }}</td>
                                    <td>{{ statusik.ktoraSekcja(dane.status) }}</td>
                                    <td>{{ dane.dataOd|date('d-m-Y') }}</td>
                                    <td>{{ dane.dataDo|date('d-m-Y') }}</td>


                                    <td>
                                        <ul class="nav navbar-right panel_toolbox">
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                                   aria-expanded="false"><i style="color: #23527c"
                                                                            class="fa fa-wrench"></i></a>
                                                <ul class="dropdown-menu" role="menu">

                                                    <li>
                                                        <a href="{{ path('newsEdit', { 'idNews': dane.id |urlencrypt}) }}">Edytuj</a>
                                                    </li>

                                                </ul>
                                            </li>

                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}